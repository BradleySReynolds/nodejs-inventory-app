extends layout

block content
    p(class="delete-head")= title

    if (!countries_list.length > 0)
        form(method='POST' action='')
            div(class="form-con").form-group
                button.btn.btn-primary(type='submit' class="delete") Yes
                a(href="/home/groups/"+url_id class='yes') No
    else 
        ul(class='country-list')
            for item in countries_list
                a= item.name 


    div(class="item-details-links")
        a(href="/home/groups" class="item-details-link") Back to All Continents
        a(href="/home" class="item-details-link") Back to Home